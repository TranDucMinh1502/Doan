rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions for role checking
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isLibrarian() {
      return isSignedIn() && getUserData().role == 'librarian';
    }
    
    function isMember() {
      return isSignedIn() && getUserData().role == 'member';
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read their own profile
      allow read: if isOwner(userId) || isLibrarian();
      
      // Users can create their own profile during signup
      allow create: if isSignedIn() && isOwner(userId);
      
      // Users can update their own profile
      allow update: if isOwner(userId) || isLibrarian();
      
      // Only librarians can delete users
      allow delete: if isLibrarian();
    }
    
    // Books collection
    match /books/{bookId} {
      // Everyone can read books
      allow read: if true;
      
      // Only librarians can create, update, delete books
      allow create, update, delete: if isLibrarian();
    }
    
    // Book Items collection
    match /bookItems/{itemId} {
      // Everyone can read book items
      allow read: if true;
      
      // Only librarians can create, update, delete book items
      allow create, update, delete: if isLibrarian();
    }
    
    // Loans collection
    match /loans/{loanId} {
      // Users can read their own loans, librarians can read all
      allow read: if isSignedIn() && 
        (isOwner(resource.data.userId) || isLibrarian());
      
      // Only librarians can create loans (issue books)
      // But allow members to create loans too for self-checkout
      allow create: if isSignedIn() && 
        (isLibrarian() || (isMember() && isOwner(request.resource.data.userId)));
      
      // Users can update their own loans (renew), librarians can update all
      allow update: if isSignedIn() && 
        (isOwner(resource.data.userId) || isLibrarian());
      
      // Only librarians can delete loans
      allow delete: if isLibrarian();
    }
    
    // Reservations collection
    match /reservations/{reservationId} {
      // Users can read their own reservations, librarians can read all
      allow read: if isSignedIn() && 
        (isOwner(resource.data.userId) || isLibrarian());
      
      // Members can create their own reservations
      allow create: if isSignedIn() && 
        (isMember() && isOwner(request.resource.data.userId)) || isLibrarian();
      
      // Users can update their own reservations (cancel), librarians can update all
      allow update: if isSignedIn() && 
        (isOwner(resource.data.userId) || isLibrarian());
      
      // Only librarians can delete reservations
      allow delete: if isLibrarian();
    }
    
    // Fines collection
    match /fines/{fineId} {
      // Users can read their own fines, librarians can read all
      allow read: if isSignedIn() && 
        (isOwner(resource.data.userId) || isLibrarian());
      
      // Only librarians can create, update, delete fines
      allow create, update, delete: if isLibrarian();
    }
    
    // Default deny for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
